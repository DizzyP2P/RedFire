.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
  }
  .spot-image {
    width: 100%;
    height: 200px;
    margin-bottom: 20px;
  }
  .spot-info {
    width: 100%;
    text-align: left;
  }
  .spot-name {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 10px;
  }
  .spot-description {
    font-size: 16px;
  }